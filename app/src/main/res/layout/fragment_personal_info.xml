<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.fragments.PersonalInfoFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_donation_id"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:hint="@string/donation_id" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_current_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:hint="@string/current_name" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_birth_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:hint="@string/birth_name" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_first_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:hint="@string/first_name" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_birth_date"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:hint="@string/birth_date" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_birth_place"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:hint="@string/birth_place" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_address"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/address" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_home_type"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/home_type" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_building"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/building" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_place_of"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/place_of" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_zip_code"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:hint="@string/zip_code" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_city"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/city" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_weight"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/weight" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_height"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/height" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_personal_number"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/personal_number" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_mobile_number"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/mobile_number" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_professional_number"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/professional_number" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/personal_information_spacing">

			<EditText
				android:id="@+id/input_email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/email" />
		</android.support.design.widget.TextInputLayout>

	</LinearLayout>

</ScrollView>